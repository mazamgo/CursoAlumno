@model Model.DBModel.Alumno

@{
    ViewBag.Title = Model.Nombre +" "+ Model.Apellido;
    Layout = "~/Views/Shared/Layout.cshtml";
}

<ol class="breadcrumb" >
    <li><a href="~/">Alumno</a></li>
    <li class="active">@(Model.Nombre+" "+Model.Apellido)</li>
</ol>

<div class="panel panel-default">
    <div class="panel-heading">Informacion Personal</div>
    <div class="panel-body">
        <dl class="dl-horizontal">
            <dt>Nombre</dt>
            <dd>@Model.Nombre</dd>
            <dt>Apellido</dt>
            <dd>@Model.Apellido</dd>
            <dt>Sexo</dt>
            <dd>@(Model.Sexo == 1 ? "Masculino" : "Femenino")</dd>
            <dt>Fecha Nacimiento</dt>
            <dd>@Model.FechaNacimiento</dd>
        </dl>
    </div>
    
    @if (Model.AlumnoCurso.Count() > 0)
    {
        <div>
            <div class="panel panel-default">
                <div class="panel-heading">Cursos</div>
                <div class="panel-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Curso</th>
                                <th style="width:200px">Nota</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var c in Model.AlumnoCurso)
                            {
                                <tr>
                                    <td>@c.Curso.Nombre</td>
                                    <td class="text-right">@c.Nota</td>
                                </tr>

                            }

                        </tbody>
                    </table>

                </div>
            </div>
        </div>

    }
    else 
    {
        <p>No hay Curso para este Alumno</p>
    }
    
  

</div>