@section Scripts {
    <script>

        var items = [];

        $(document).ready(function () {          
            fn_ListAllAlumno();
        });

        function fn_ListAllAlumno() {
                       
            var showData = $('#show-data');

            $.ajax({
                url: 'http://localhost:48692/GetApiAllAlumnos',
                type: 'GET',
                dataType: 'json',
                success: function (data, textStatus, xhr) {

                    items = data;
                    console.log(data);

                    document.write("<font color='white'>");
                    document.write("<table border=1 >" +
                     "<tr><th colspan=2>" +
                          "Lista de Nombres y Fechas Nacimientos" +
                     "</th></tr>");
                    for (i = 0; i <= 3; i = i + 1) {                
                        document.write("<tr><td>" + items[i].Nombre+' '+items[i].Apellido  + "</td>");
                        document.write("<td>" + items[i].FechaNacimiento + "</td></tr>");
                    }

                    document.write("</table></font><br />");
                    
                },
                error: function (xhr, textStatus, errorThrown) {
                    console.log('Error in Operation');
                }
            });

            showData.empty();

